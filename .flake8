[flake8]
# Basis-Konfiguration
max-line-length = 100
max-complexity = 10
statistics = True
docstring-convention = google

# Formatierung
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s
filename = *.py

# Ignorierte Fehler
ignore =
    E203,   # Whitespace vor ':'
    W503,   # Zeilenumbruch vor Operator
    E226    # Leerzeichen um arithmetische Operatoren

# Ausgeschlossene Pfade
exclude =
    venv/
    .git/
    __pycache__/
    build/
    dist/
    *.egg-info
    .eggs/
    .tox/
    .mypy_cache/
